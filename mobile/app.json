{
  "expo": {
    "name": "Nummoria",
    "slug": "mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "usesAppleSignIn": true,
      "supportsTablet": true,
      "bundleIdentifier": "com.gokmeroz.nummoria",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to scan receipt QR codes and automatically fill expense details.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.gokmeroz.nummoria"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Nummoria to access your camera to scan receipt QR codes."
        }
      ],
      "expo-apple-authentication",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.5"
          }
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "extra": {
      "eas": {
        "projectId": "7c6d191c-d66b-4c66-9281-7fa479893021"
      }
    }
  }
}
